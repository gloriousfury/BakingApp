<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sixty"
    android:layout_margin="@dimen/five"
    android:background="@color/white"
    android:orientation="vertical"

    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/sixty"
        android:background="@color/white"
        android:orientation="vertical"

        >

        <ImageView
            android:id="@+id/img_steps_thumbnail"
            android:layout_width="@dimen/sixty"
            android:layout_height="match_parent"
            android:src="@color/dark_blue2"/>

        <TextView
            android:id="@+id/step_short_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_toRightOf="@+id/img_steps_thumbnail"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="17sp"
            tools:text="1. Steps short description here"

            />


    </RelativeLayout>

</android.support.v7.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/sixty"
    android:background="@color/"
    android:layout_margin="@dimen/five"

    >


    <ImageView
        android:id="@+id/img_steps_thumbnail"
        android:layout_height="match_parent"
        android:layout_width="@dimen/sixty"
        android:src="@color/dark_blue2"
        >
    </ImageView>

    <TextView
        android:layout_toRightOf="@+id/img_steps_thumbnail"
        android:id="@+id/step_short_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/ten"
        android:layout_marginRight="@dimen/ten"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:text="1. Steps short description here"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:maxLines="2"

        />



</RelativeLayout>